<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sybrid">

    <!-- Camera Preview Area -->
    <FrameLayout
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_gravity="top">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/setting"
                android:padding="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- Left Side Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="16dp">


        </LinearLayout>

        <!-- Right Side Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp">


        </LinearLayout>

        <!-- Bottom Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <!-- Camera Button Area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="32dp"
                android:paddingBottom="24dp">

                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="33dp">

                    <ImageView
                        android:id="@+id/btnCapture2"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:src="@drawable/mecircle"
                        android:layout_marginTop="18dp"
                        android:scaleType="centerInside" />

                </FrameLayout>

                <!-- Main Camera Button -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:id="@+id/btnCapture"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/croppedcircle"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerInside" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="-19dp">

                    <ImageView
                        android:id="@+id/btnCapture1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/image"
                        android:layout_marginTop="23dp"
                        android:scaleType="centerInside" />

                </FrameLayout>

            </LinearLayout>

            <!-- Camera Modes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:background="#000000">

                <TextView
                    android:id="@+id/modeType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TYPE"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/modeLive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LIVE"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/modeNormal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NORMAL"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/modeBoomerang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BOOMERANG"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/modeSuper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SUPER"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="4dp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>