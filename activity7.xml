<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/search_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="internshala"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/btn_clear_search"
                android:layout_width="20dp"
                android:layout_height="14dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="2dp"
                android:src="@drawable/close" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textColor="#E60023"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Filter Tabs -->
    <LinearLayout
        android:id="@+id/filter_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_layout"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        >

        <TextView
            android:id="@+id/tab_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/tab_selected_underline" />

        <TextView
            android:id="@+id/tab_accounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accounts"
            android:textColor="#999999"
            android:textSize="16sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="24dp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/tab_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tags"
            android:textColor="#999999"
            android:textSize="16sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="24dp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/tab_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Places"
            android:textColor="#999999"
            android:textSize="16sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:background="?android:attr/selectableItemBackground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filter_tabs"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="200dp"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="-49dp"
            android:layout_height="24dp"
            android:src="@drawable/indicator" />

    </LinearLayout>

    <!-- Search Results -->
    <ScrollView
        android:id="@+id/search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filter_tabs"
        android:layout_above="@id/bottom_navigation"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- User Profile Result -->
            <LinearLayout
                android:id="@+id/profile_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/outline"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IS"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="internshala"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="internshala"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Hashtag Result 1 -->
            <LinearLayout
                android:id="@+id/hashtag_result1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_gray_bg"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#"
                        android:textColor="#666666"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#internshala"
