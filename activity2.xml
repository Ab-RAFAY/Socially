<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c64c40"
    android:padding="16dp">

    <!-- Back Arrow and App Name in a Horizontal Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back Arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Socially"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create An Account and Sign Up"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />

    <!-- Profile Image Placeholder -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/camera"
        android:contentDescription="Profile Image"
        android:background="@drawable/rounded_background"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginTop="32dp" />

    <!-- Username Label and Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="24dp" />
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:background="@drawable/edittext_background"
        android:inputType="text" />

    <!-- Your Name Label and Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />
    <EditText
        android:id="@+id/yourName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:background="@drawable/edittext_background"
        android:inputType="text" />

    <!-- Your Last Name Label and Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Last name"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />
    <EditText
        android:id="@+id/yourLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:background="@drawable/edittext_background"
        android:inputType="text" />

    <!-- Date of Birth Label and Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />
    <EditText
        android:id="@+id/dateOfBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:background="@drawable/edittext_background"
        android:inputType="date" />

    <!-- E-mail Label and Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:background="@drawable/edittext_background"
        android:inputType="textEmailAddress" />

    <!-- Password Label and Input -->
<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Password"-->
<!--        android:textColor="#FFFFFF"-->
<!--        android:textSize="16sp"-->
<!--        android:layout_marginTop="16dp" />-->
<!--    <EditText-->
<!--        android:id="@+id/password"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textColor="#FFFFFF"-->
<!--        android:textColorHint="#B0B0B0"-->
<!--        android:background="@drawable/edittext_background"-->
<!--        android:inputType="textPassword" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!-- Password Label -->
        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"/>

        <!-- Password Field -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:hint="Enter Password"
            android:textColorHint="#B0B0B0"
            android:background="@drawable/edittext_background"
            android:inputType="textPassword"
            android:paddingEnd="48dp"
            android:layout_below="@id/passwordLabel"
            android:layout_marginTop="4dp"/>

        <!-- Eye Icon -->
        <ImageView
            android:id="@+id/eyeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/eye"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/password"
            android:layout_marginEnd="5dp"
            android:padding="4dp"/>
    </RelativeLayout>


    <!-- Create Account Button -->
    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_marginTop="24dp"
        android:layout_gravity="center" />

</LinearLayout>