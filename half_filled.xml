<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background (empty part of progress) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- gray empty color -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Foreground (filled part of progress) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- orange filled color -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

</layer-list>