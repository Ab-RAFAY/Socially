<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#8B4513"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_marginEnd="40dp"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRecents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recents"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#8B4513"
                android:background="?android:attr/selectableItemBackground"
                android:padding="6dp" />

            <Button
                android:id="@+id/btnDropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â–¼"
                android:textSize="12sp"
                android:textColor="#8B4513"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginStart="-40dp" />


        </LinearLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#8B4513"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />


    </LinearLayout>

    <!-- Main Selected Image -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivMainImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/haa" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnCrop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/glasses"
                android:padding="2dp"
                android:layout_marginStart="130dp"
                android:layout_marginEnd="10dp" />

            <ImageView
                android:id="@+id/btnAspectRatio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/collage"
                android:padding="2dp"
                android:layout_marginEnd="80dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/selectmultiple"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:background="@drawable/multiple_background">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:src="@drawable/slides"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Multiple"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginTop="9dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Gallery Grid -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <GridLayout
            android:id="@+id/galleryGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:padding="4dp">

            <!-- Row 1 -->
            <ImageView
                android:id="@+id/img1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/rafay1"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fiz"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fyp"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/x"
                android:background="?android:attr/selectableItemBackground" />

            <!-- Row 2 -->
            <ImageView
                android:id="@+id/img5"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tokyo"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sybrid"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/img7"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shadi"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/img8"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/me"
                android:background="?android:attr/selectableItemBackground" />

            <!-- Row 3 -->
            <ImageView
                android:id="@+id/img9"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/y"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/img10"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sam"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/img11"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hehe"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/img12"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/d"
                android:background="?android:attr/selectableItemBackground" />
        </GridLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/btnLibrary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Library"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

        <TextView
            android:id="@+id/btnPhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Photo"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

        <TextView
            android:id="@+id/btnVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Video"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Bottom indicator line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#8B4513" />

</LinearLayout>