<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header with Following/You tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Following"
            android:textStyle="bold"
            android:textColor="#888888"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="You"
            android:textStyle="bold"
            android:textColor="#FF3366"
            android:textSize="16sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Underline for You tab -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginHorizontal="16dp" />

    <View
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:background="#FF3366"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="100dp" />

    <!-- Follow Requests Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Follow Requests"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- New Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp" />

            <!-- Activity Item 1: karenme liked your photo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/maxcircle"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Max Verstappen liked your photo."
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1h"
                            android:textColor="#888888"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rafay1"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <!-- Today Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp" />

            <!-- Activity Item 2: kiero_d, zaekjohn and 26 others liked your photo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/stackedcircle"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="kiero_d, zaekjohn and 26 others liked your photo."
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3h"
                            android:textColor="#888888"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rafay1"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <!-- This Week Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This Week"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp" />

            <!-- Activity Item 3: craig_love mentioned you in a comment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/circlebash"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lord Bash mentioned you in a comment: @jacob_w exactly.. 2"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2d"
                            android:textColor="#888888"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Like and Reply buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/dil"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reply"
                            android:textColor="#888888"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/e"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <!-- Activity Item 4: martini_rond started following you -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/kencircle"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kendall Jenner started following you."
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3d"
                            android:textColor="#888888"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/messageButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Message"
                    android:textColor="#000000"
                    android:background="@drawable/search_background"
                    android:textSize="12sp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="@null"/>

            </LinearLayout>

            <!-- Activity Item 5: maxjacobson started following you -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/blankacircle"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Blanca Soler started following you."
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3d"
                            android:textColor="#888888"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/messageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Message"
                    android:textColor="#000000"
                    android:background="@drawable/search_background"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="@null"/>

            </LinearLayout>

            <!-- Activity Item 6: mjs_potter started following you -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/mecircle"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/rfy_started_following_you"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3d"
                            android:textColor="#888888"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/followButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Follow Back"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/message_button_background"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="@null"/>

            </LinearLayout>

            <!-- This Month Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This Month"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp" />

            <!-- Activity Item 7: Example user started following you -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sumit"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sumit started following you."
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2w"
                            android:textColor="#888888"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/messageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Message"
                    android:textColor="#000000"
                    android:background="@drawable/search_background"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="@null"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:src="@drawable/tabbar"
        android:scaleType="fitXY" />

</LinearLayout>