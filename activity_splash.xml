<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Logo centered vertically -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/socially_logo"
        android:contentDescription="@string/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- "from SMD" at the bottom (above the pill) -->
    <LinearLayout
        android:id="@+id/from_smd_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/bottomPill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/fromText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textColor="#6B6B6B"
            android:gravity="center"/>

        <TextView
            android:id="@+id/smdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMD"
            android:textSize="36sp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="true"
            android:textColor="#9E3030"
            android:layout_marginTop="4dp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Bottom pill -->
    <View
        android:id="@+id/bottomPill"
        android:layout_width="120dp"
        android:layout_height="8dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/rounded_pill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
